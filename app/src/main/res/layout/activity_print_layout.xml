<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/printable_sheet"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        tools:context="com.brounie.mijuphotos.Activities.PrintLayout">

    <ImageView
            android:layout_marginTop="15dp"
            android:src="@drawable/frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/pincode_text"
            android:text="PIN CODE: NO PIN CODE"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="¡Ya se envió a tu correo esta información!"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="@string/texto_temo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

    <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/final_print_add_photo"
                android:text="Add"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/layout_bg2"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/final_print_btn"
                android:text="Ok"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/layout_bg2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>