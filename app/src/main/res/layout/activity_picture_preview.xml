<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/mainLayout"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="#FFFFFF"
        tools:context="com.brounie.mijuphotos.Activities.PicturePreview">

    <RelativeLayout
            android:id="@+id/total_frame"
            android:layout_marginHorizontal="23dp"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        <ImageView
                android:id="@+id/prev_picture"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="60dp"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="match_parent"/>

        <ImageView
                android:id="@+id/prev_frame"
                android:src="@drawable/maar_miju"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </RelativeLayout>

    <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/prev_end_btn"
                android:text="End"
                android:textColor="#FFFFFF"
                android:background="@drawable/layout_bg2"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/prev_next_btn"
                android:text="Next"
                android:textColor="#FFFFFF"
                android:background="@drawable/layout_bg2"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>