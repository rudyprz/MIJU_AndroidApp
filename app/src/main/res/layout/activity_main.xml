<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context="com.brounie.mijuphotos.Activities.MainActivity">

    <ImageView
            android:id="@+id/main_icon"
            android:src="@drawable/ic_icono_main"
            android:scaleType="fitXY"
            android:layout_marginTop="190.85dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="356.58dp"
            android:layout_height="117.01dp"/>

    <Button
            android:id="@+id/main_next_btn"
            android:text="Ínscríbeme"
            android:fontFamily="@font/plantin"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="@drawable/layout_bg2"
            android:paddingVertical="5dp"
            android:paddingHorizontal="15dp"
            app:layout_constraintStart_toStartOf="@id/main_edittext"
            app:layout_constraintEnd_toEndOf="@id/main_edittext"
            app:layout_constraintTop_toBottomOf="@id/main_edittext"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/main_edittext"
            android:hint="Correo electrónico"
            android:textSize="16sp"
            android:fontFamily="@font/plantin"
            android:inputType="textWebEmailAddress"
            android:maxLines="1"
            android:layout_marginTop="147.13dp"
            app:layout_constraintTop_toBottomOf="@+id/main_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:background="@drawable/layout_bg"
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>